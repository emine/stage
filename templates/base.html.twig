<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Mise en Relation{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="/../public/build/style.css">

        <script src="/../public/build/app.js"></script>

        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% if app.user  %} 
            <a href={{ path('site-home')}}>HOME</a> 
            <div style="display:inline-block; float: right">{{ app.user.email }} <a href={{ path('app_logout')}}>Déconnexion</a></div>    
            <hr>
        {%  else  %}
            <div style="text-align:center"><h1>MISE EN RELATION</h1></div>
        {% endif %}
        {% block body %}{% endblock %}
    </body>
</html>
