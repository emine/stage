{# templates/demand/demand.html.twig #}
{% extends 'base.html.twig' %}


{# 
vars passed by controller : 
    id : demand id
    title
    text
#}

{% block body %}
    <div class="container-sm">
    {% if id == 0 %}
        <h3>Nouvelle demande</h3>
    {% else %}
        <h3>Modification de la demande</h3>
    {% endif %}    
    <form action="{{ path('edit_demand', {'id' : id}) }}" method="POST" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Titre</label>
            <input type='text' name='title' class="form-control" value='{{ title }}'>
        </div>
        
        <div class="mb-3">
            <label for="text" class="form-label">Texte</label>
            <textarea rows=5 name="text" class="form-control">{{text}}</textarea>
        </div>
        
         <div class="mb-3">
            <label for="photo" class="form-label">Photo</label>
            <input type="file" name="photo" class="form-control">
        </div>
        
        <div class="mb-3">
            <button
                type="submit"
                name="submit"
                value='submit'
                class="btn btn-primary"
            >Enregistrer
            </button>
        </div>
    </form>
    </div>         
{% endblock %}
     
     